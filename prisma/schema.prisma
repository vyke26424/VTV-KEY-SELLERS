generator client {
  provider = "prisma-client-js"
 // output   = "../generated/prisma"
  //moduleFormat = "cjs"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(cuid())
  email String @unique 
  password String
  fullName String?
  role Role @default(USER)
  balance Decimal @default(0) @db.Decimal(10,2)
  
  // quan hệ 
  orders Order[]
  reviews Review[]
  interactions UserInteraction[] // Dữ liệu cho recommendation

  refreshTokens RefreshToken[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  USER
  ADMIN
  SUPPORT
}

model Category {
  id Int @id @default(autoincrement())
  name String
  slug String @unique
  products Product[]

  isDeleted Boolean @default(false)
  deletedAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([isDeleted])
  //@@index([slug])
}

model Product {
  id Int @id @default(autoincrement())
  name String
  slug String @unique // tên được chuẩn hóa
  description String? @db.Text
  thumbnail String? // lưu url của ảnh'
  // lưu 1 cái aliases mà người dùng có thể gọi như ["Netflix", "nét phờ líc", "acc xem phim"]
  keywords Json?
  // Dữ liệu cấu trúc để Bot hiểu sâu về sản phẩm. 
  // VD: { "features": ["4K", "No Ads"], "suitable_for": ["Family", "Student"] }
  aiMetadata Json?
  // điểm đánh giá trung bình
  avgRating Float @default(0) //

  categoryId Int
  category Category @relation(fields: [categoryId], references: [id]) 
  
  // này thì là các gói như netflix 1 năm, netflix 1 tháng
  variants ProductVariant[]
  reviews Review[]
  interactions UserInteraction[] // để biết user nào đã xem/click

  isHot Boolean @default(false) // sản phẩm nổi bật
  isActive Boolean @default(true)

  isDeleted Boolean @default(false)
  deletedAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([isDeleted])
}

// Core Logic 
model ProductVariant {
  id Int @id @default(autoincrement())
  name String // vd : gói 1 tháng , gói gia đình
  price Decimal @db.Decimal(10,2)
  orginalPrice Decimal @db.Decimal(10,2) // Dùng để lừa người dùng có giảm giá :v

  productId Int
  product Product @relation(fields: [productId], references: [id])
  stockItems StockItem[] // kho key/account
  orderItems OrderItem[] 

  isDeleted Boolean @default(false)
  deletedAt DateTime?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([isDeleted])
}

model StockItem {
  id Int @id @default(autoincrement())
  // Mã hóa
  credential String @db.Text
  metadata Json? // ngày hết hạn gốc, email recovery...
  status StockStatus @default(AVAILABLE)
  variantId Int
  variant ProductVariant @relation(fields: [variantId], references: [id])

  // Liên kết đơn hàng khi đã bán
  orderItemId Int? @unique
  orderItem OrderItem? @relation(fields: [orderItemId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum StockStatus {
  AVAILABLE
  LOCKED // đang giữ chỗ, tránh trường hợp 2 người mua 1 key
  SOLD
  ERROR
}

// Giao dịch và đơn hàng
model Order {
  id Int @id @default(autoincrement())
  code String @unique // #ORD123
  totalAmount Decimal @db.Decimal(10,2)
  status OrderStatus @default(PENDING)
  userId String
  user User @relation(fields: [userId], references: [id])

  items OrderItem[]
  payment Payment ?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum OrderStatus {
  PENDING
  COMPLETED
  CANCELED
  REFUNDED
}

model OrderItem {
  id Int @id @default(autoincrement())
  price Decimal @db.Decimal(10,2)
  quantity Int

  codes     String? @db.Text // lưu key/tài khoản đã bán dưới dạng text

  orderId Int
  order Order @relation(fields: [orderId], references: [id])
  variantId Int
  variant ProductVariant @relation(fields: [variantId], references: [id])
  stockItems StockItem[]
}

model Payment {
  id Int @id @default(autoincrement())
  amount Decimal @db.Decimal(10, 2)
  method String //VNPAY, MOMO
  transId String? //transaction ID từ cổng thanh toán
  status String // SUCCESS, FAILDED

  orderId Int @unique
  order Order @relation(fields: [orderId], references: [id])
}

// Hệ thống gợi ý và phân tích

// Bảng này lưu implicit feedback dùng để train model gợi ý
model UserInteraction {
  id  Int @id @default(autoincrement())
  userId String? // null để track khách vãng lai qua cookie nếu thích
  user User? @relation(fields: [userId], references: [id])

  productId Int
  product Product @relation(fields: [productId], references: [id])

  type InteractionType
  // thời gian user xem sản phẩm (giây)
  duration Int? @default(0)
  //metadata
  meta Json?
  
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([productId])
}

enum InteractionType {
  VIEW // xem chi tiết, weight thấp
  ADD_TO_CART // thêm giỏ hàng, weight trung bình
  PURCHASE // đã mua, weight cao nhất, trigger từ Order
  LIKE // yêu thích
  SHARE // chia sẻ (mà 2 trường này cũng chắc không có thời gian đụng tới đâu : ) 
}

model Review {
  id Int @id @default(autoincrement())
  rating Int // 1-5 sao
  comment String? @db.Text

  userId String
  user User @relation(fields: [userId], references: [id])

  productId Int
  product Product @relation(fields: [productId], references: [id])
  
  isDeleted Boolean @default(false)
  deletedAt DateTime?

  createdAt DateTime @default(now())

  @@index([productId])
  @@index([isDeleted])
}

model RefreshToken {
  id Int @id @default(autoincrement())
  token String @db.Text //Thêm thằng @db.Text để tránh lỗi token quá dài
  userId String
  tokenId String @unique
  user User @relation(fields: [userId], references: [id])
  revoked Boolean @default(false)
  createAt DateTime @default(now())
  expiresAt DateTime
}